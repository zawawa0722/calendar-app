<div class="login-wrapper">
  <button id="openModal">click here!</button>
</div>
<!-- モーダルエリアここから -->
<section id="modalArea" class="modalArea">
  <div id="modalBg" class="modalBg"></div>
  <div class="modalWrapper">
    <div class="modalContents">
      <div class="container">
        <h2>新規登録</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= devise_error_messages! %>

          <div class="field-nickname">
            <%= f.label :nickname %> <em>(6文字以内)</em><br />
            <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "sign-up__text" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "sign-up__text" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "sign-up__text" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign-up__text" %>
          </div>

          <div class="actions">
            <%= f.submit "登録", class: "sign-up__btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div id="closeModal" class="closeModal">
      ×
    </div>
  </div>
</section>
<!-- モーダルエリアここまで -->

<!-- ↓body閉じタグ直前でjQueryを読み込む -->
